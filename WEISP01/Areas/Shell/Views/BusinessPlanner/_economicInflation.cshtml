    </div>
    <div class="ec-panel" data-bind="visible:model.bpmodel().detail()">
        <div class="col-md-12 no-padding" style="margin-top:25px;">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#upload" id="" data-toggle="tab">Upload Forecast</a></li>
                <li><a href="#view" data-toggle="tab" id="">View Forecast</a></li>
                <li><a href="#edit" data-toggle="tab" id="">Edit Forecast</a></li>
            </ul>
            <div class="tab-content" style="padding-top:10px;">
                <div class="tab-pane active" id="upload" style="overflow-y:auto;">
                    <div class="col-md-12">
                        <label>Economic Inflation Factor:</label>
                        <input type="text" data-bind="value:model.bpmodel().economicInflation"/>
                        <button type="button" class="btn btn-primary btn-sm" style="width:100px">Submit</button>
                    </div>
                </div>
                <div class="tab-pane" id="view" style="overflow-y:auto;">
                    <div class="col-md-12">
                        <label>Economic Inflation Factor:</label>
                        <input type="text" data-bind="value:model.bpmodel().economicInflation">
                    </div>
                </div>
                <div class="tab-pane" id="edit" style="overflow-y:auto;">
                    <div class="col-md-12">
                        <label>Economic Inflation Factor:</label>
                        <input type="text" data-bind="value:model.bpmodel().economicInflation"/>
                        <button type="button" class="btn btn-primary btn-sm" style="width:100px">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
