<style>
    .no-padding {
        padding: 0px;
    }
    .business-plan-container {
        margin-top: 40px;
        padding:10px;
    }

    .container-menu-busplan {
    }

        .container-menu-busplan > .menu-busplan {
            margin: 0;
            padding: 0;
        }

            .container-menu-busplan > .menu-busplan li {
                list-style: none;
                margin: 0;
                padding: 5px;
            }

                .container-menu-busplan > .menu-busplan li a {
                    background: #F89406;
                    font-size: 12px;
                    color: #ffffff;
                    display: block;
                    width: 100%;
                    /* height: 81px; */
                    padding: 15px 27px 15px 60px;
                    position: relative;
                    border-radius: 40px;
                    -webkit-transition: all 500ms linear;
                    -moz-transition: all 500ms linear;
                    -o-transition: all 500ms linear;
                    -ms-transition: all 500ms linear;
                    transition: all 500ms linear;
                }

                    .container-menu-busplan > .menu-busplan li a i {
                        font-size: 14px;
                        position: absolute;
                        top: 6px;
                        left: 8px;
                        background: #ffffff;
                        color: #F89406;
                        border-radius: 40px;
                        padding: 10px;
                        display: inline-block;
                        width: 35px;
                        height: 35px;
                        -webkit-transition: all 500ms linear;
                        -moz-transition: all 500ms linear;
                        -o-transition: all 500ms linear;
                        -ms-transition: all 500ms linear;
                        transition: all 500ms linear;
                    }

                    .container-menu-busplan > .menu-busplan li a:hover, .menu-busplan > li a.active {
                        text-decoration: none;
                        background: #e74c3c;
                    }

                        .container-menu-busplan > .menu-busplan li a:hover i, .menu-busplan > li a.active i {
                            color: #E9573F;
                            position: absolute;
                            top: 6px;
                            right: 8px;
                            transform: rotate(45deg);
                            -webkit-transform: rotate(45deg);
                            -o-transform: rotate(45deg);
                            -moz-transform: rotate(45deg);
                        }
</style>
