<script>
    model.confirmation = ko.observable({
        gridColumn : [
            { field: "WellName", title: "WellName" },
            { field: "RigName", title: "RigName" },
            { field: "ActivityType", title: "ActivityType" }
        ],
        gridData: ko.observableArray([]),
