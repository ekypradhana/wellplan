@{
    ViewBag.Title = "Validation Test";
    Layout = "~/Views/Shared/_common_v1.cshtml";
}

<div style="width:800px" class="form-horizontal" data-bind="with:record">
    <div class="form-group">
        <label class="col-md-2"></label>
        <div class="col-md-10">
            <input type="text" data-bind="value:name" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-12" data-bind="text:'Hi ' + name()" style="text-align:left"></label>
    </div>
</div>

<script>
    model.record = ko.observable({
        name: ko.observable("Arief").extend({required:true})
    });

    model.user = ko.observable({
        fullname: ko.observable("Arief Darmawan")
    });
</script>