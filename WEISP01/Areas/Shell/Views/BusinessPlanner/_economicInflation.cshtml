<div style="padding: 0px 15px 15px;">
    <div class="ec-panel" data-bind="with:model.bpmodel()">
        <div class="col-md-12" style="text-align:center">

            <ul class="nav nav-stacked" style="margin-bottom:10px">
                <li class="stacked" style="background-color: #23be23; border: none; padding: 10px; color: #ffffff">Economic Inflation</li>
            </ul>
        </div>
        <div class="clearfix"></div>

        <div class="col-md-12" style="margin-top:15px;">
            <div class="col-md-6">
                <label>Country:</label>
                <input type="text" data-bind="kendoDropDownList:{data:['Australia','Indonesia', 'Singapore']}" />
                <button type="button" class="btn btn-primary btn-sm" style="width:100px" onclick="model.bpmodel().unhideDetail()">Submit</button>
